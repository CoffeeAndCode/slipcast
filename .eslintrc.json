{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["packages/**/test/**/*.js"]
    }],
    "no-console": ["error", { "allow": ["error", "log", "warn"] }],
    "strict": ["error", "safe"]
  }
}
